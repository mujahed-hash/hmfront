:root {
  --zoom: 1;
  /* Centralized scaling factor */
  --ion-font-size-base: calc(16px * var(--zoom));
  --ion-icon-size-large: calc(32px * var(--zoom));
  --custom-blue-focus: #2196f3;

  /* Fluid Typography Scale with Dynamic Scaling */
  --font-xs: calc(clamp(0.625rem, 0.6rem + 0.125vw, 0.75rem) * var(--zoom));
  --font-sm: calc(clamp(0.75rem, 0.72rem + 0.15vw, 0.875rem) * var(--zoom));
  --font-base: calc(clamp(0.9375rem, 0.9rem + 0.25vw, 1.0625rem) * var(--zoom));
  /* Boosted base for products */
  --font-lg: calc(clamp(1.0625rem, 1rem + 0.3vw, 1.1875rem) * var(--zoom));
  --font-xl: calc(clamp(1.1875rem, 1.1rem + 0.4vw, 1.3125rem) * var(--zoom));
  --font-2xl: calc(clamp(1.3125rem, 1.25rem + 0.5vw, 1.625rem) * var(--zoom));
  --font-3xl: calc(clamp(1.625rem, 1.5rem + 1vw, 2.25rem) * var(--zoom));

