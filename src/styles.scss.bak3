@import '~primeflex/primeflex.css';
/* You can add global styles to this file, and also import other style files */
body,html{
    width: 100%;
    height: 100%;
    margin: 0;
}

a{
    font-style: none;
    text-decoration: none;
    color: inherit;
}
html, body { height: 100% }
body { margin: 0; font-family: Roboto, "Helvetica Neue", sans-serif; padding: 0; width: 100%;overflow-x: hidden; 
}


// Badge customization

/* Disable ripple effect globally */
:root {
  --ripple-color: transparent;
}

/* For Ionic apps specifically */
ion-item, ion-button, ion-list, ion-content {
  --ripple-color: transparent;
}
/* Ensure no unintended ripple effect on entire screen */
ion-content {
  --ripple-color: transparent;
}
/* Disable ripple effect globally */
ion-ripple-effect {
  display: none !important;
}
/* Disable tap highlight globally */
* {
  -webkit-tap-highlight-color: transparent;
  -webkit-touch-callout: none;
}
/* Prevent full-page selector on Android */
* {
  -webkit-tap-highlight-color: transparent;
  outline: none;
}
input:focus {
  zoom: 1;
  outline: none;
}

router-outlet{
  height: 100%;
  margin-top: 1rem;
  margin-bottom: 5rem;
}
.notification {
  padding: 15px;
  margin: 10px;
  border-radius: 5px;
  font-size: 16px;
  color: #fff;
  opacity: 0.9;
  transition: opacity 0.5s ease-out;
  margin-left: -0.3rem;
}
.success {
  background-color: #4caf50;
}

.error {
  background-color: #f44336;
}

.info {
  background-color: #2196f3;
}
@media screen and (orientation:portrait){
  *{
    overflow-x: hidden;
  }
}
:root {
  --ion-font-size-base: 14px; /* Base font size */
  --ion-icon-size-large: 32px; /* Customize icon sizes */
}
h1,h2,h3{
  font-family: "Bebas Neue", serif;
  font-weight: 400;
  font-style: normal;
  letter-spacing: 1px;
}
body,span,p{
  font-family: "Rubik", serif;
  font-optical-sizing: auto;

  // font-weight: <weight>;
  // font-style: normal;
}
.itm-btn{
  width: 100%;
  display: grid;
  justify-items: center;
  text-align: center;
  margin: 0;
  position: relative;
  left:-5.8%;
  margin-bottom: 2.4rem;
  margin-top: 0.8rem;
}
.itm-btn button{
  width:max-content;
  background-color: #2196f3;
  color: white;
  font-weight: bold;
  border: none;
  border-radius: 7px;
  padding: 6px 9px;
  margin: 0;
  text-align: center;
  box-shadow: 6px 6px 12px #c5c5c5,
             -6px -6px 12px #ffffff;
}
@media screen and (orientation:portrait) {

    .itm-btn{
      width: 100%;
      display: grid;
      justify-items: center;
    }
  }


// Font size settings - change text size ONLY, no page scaling

body.font-size-small p,
body.font-size-small span,
body.font-size-small div,
body.font-size-small a,
body.font-size-small button,
body.font-size-small label {
  font-size: 0.85em;
}



body.font-size-large p,
body.font-size-large span,
body.font-size-large div,
body.font-size-large a,
body.font-size-large button,
body.font-size-large label {
  font-size: 1.15em;
}


body.font-size-medium * {
  font-size: 15px !important;
}

body.font-size-large * {
  font-size: 17px !important;
}

// Preserve icon sizes
body.font-size-small .material-icons,
body.font-size-small .mat-icon,
body.font-size-medium .material-icons,
body.font-size-medium .mat-icon,
body.font-size-large .material-icons,
body.font-size-large .mat-icon {
  font-size: 24px !important;
}

// Font Size Settings - Adjusted per user request
// Small = 15px (was medium), Medium = 17px (was large), Large = 19px
body.font-size-small * {
  font-size: 15px !important;
}

body.font-size-medium * {
  font-size: 17px !important;
}

body.font-size-large * {
  font-size: 19px !important;
}

// Preserve icon sizes regardless of setting
body.font-size-small .material-icons,
body.font-size-small .mat-icon,
body.font-size-medium .material-icons,
body.font-size-medium .mat-icon,
body.font-size-large .material-icons,
body.font-size-large .mat-icon {
  font-size: 24px !important;
}
